<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <!-- Base application theme. -->
    <style name="Base.Theme.TwinMind_Interview_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Tab Text Style -->
    <style name="TabTextStyle">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/accent_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/dimen_24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
    </style>

    <style name="Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_secondary_bg</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="cornerRadius">@dimen/dimen_24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Button.Danger" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button_danger_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/dimen_24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
    </style>

    <!-- Base Text Style -->
    <style name="Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Text Headline Base Style -->
    <style name="Text.Headline" parent="Text">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Text Styles -->
    <style name="Text.Headline.Large" parent="Text.Headline">
        <item name="android:textSize">@dimen/dimen_32sp</item>
        <item name="android:lineSpacingExtra">@dimen/dimen_4dp</item>
    </style>

    <style name="Text.Headline.Medium" parent="Text.Headline">
        <item name="android:textSize">@dimen/dimen_24sp</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Body" parent="Text">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:lineSpacingExtra">@dimen/dimen_2dp</item>
    </style>

    <style name="Text.Body.Secondary" parent="Text.Body">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Text.Caption" parent="Text">
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Card Style -->
    <style name="Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/dimen_12dp</item>
        <item name="cardElevation">@dimen/dimen_2dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">@dimen/dimen_16dp</item>
    </style>

    <style name="GreenSwitchTheme" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/GreenSwitchThemeOverlay</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="GreenSwitchThemeOverlay">
        <!-- Thumb color when switch is ON -->
        <item name="colorPrimary">#4CAF50</item>
        <!-- Track color when switch is ON -->
        <item name="colorPrimaryVariant">#81C784</item>
        <!-- Thumb color when switch is OFF -->
        <item name="colorOnSurface">#FFFFFF</item>
        <!-- Track color when switch is OFF -->
        <item name="colorSurface">#E0E0E0</item>
    </style>
    <!-- FAB Style -->
    <style name="FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/accent_blue</item>
        <item name="elevation">@dimen/dimen_8dp</item>
        <item name="borderWidth">0dp</item>
    </style>
</resources>