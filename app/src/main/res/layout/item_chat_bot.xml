<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="start"
    android:padding="8dp">

    <!-- Enhanced Bot Message with Premium Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/Cuswhite"
        app:cardElevation="@dimen/dimen_5dp"
        app:cardBackgroundColor="@android:color/transparent">

        <TextView
            android:id="@+id/tvMessageBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bubble_bot"
            android:textColor="#3C4043"
            android:padding="@dimen/dimen_16dp"
            android:text="@string/hello_i_m_your_ai_assistant_ready_to_help_you"
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2dp"
            android:textIsSelectable="true" />
    </androidx.cardview.widget.CardView>
</LinearLayout>