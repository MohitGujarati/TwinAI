<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    app:cardCornerRadius="@dimen/dimen_32dp"
    app:cardBackgroundColor="@color/Cuswhite"
    android:outlineSpotShadowColor="@color/white"
    android:outlineAmbientShadowColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout

        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="24dp">


        <LinearLayout
            android:layout_gravity="end"
            android:backgroundTint="@color/Cuswhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageView

                android:id="@+id/closeBtn"
                android:layout_width="@dimen/dimen_32dp"
                android:layout_height="@dimen/dimen_32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/close"
                android:padding="6dp"
                android:src="@drawable/ic_close"
                app:tint="@color/black" />
        </LinearLayout>

        <!-- Add your transcript/chat content below -->
        <TextView
            android:id="@+id/bottomSheetTranscript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/text_will_appear_here_onces_recording_is_stoped"
            android:textColor="@color/text_primary"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
