<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_transcript_segment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_12sp"
    android:layout_marginTop="@dimen/dimen_12sp"
    android:layout_marginEnd="@dimen/dimen_12sp"
    android:layout_marginBottom="@dimen/dimen_16dp"
    android:backgroundTint="@color/white"
    android:elevation="@dimen/dimen_20dp"
    android:outlineAmbientShadowColor="@color/accent_blue"
    android:outlineSpotShadowColor="@color/accent_blue"
    app:cardCornerRadius="@dimen/dimen_12dp"
    tools:ignore="MissingConstraints">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_primary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_recording_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif"
                android:text="00:00"
                android:textColor="#8e8e93"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/progressBar"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:lottie_fileName="eEQ1XecEGv.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />


            <TextView
                android:id="@+id/tvTranscriptFull"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:padding="@dimen/dimen_12sp"
                android:text="@string/text_will_appear_here_onces_recording_is_stoped"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>




