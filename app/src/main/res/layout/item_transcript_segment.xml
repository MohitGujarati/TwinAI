<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginBottom="@dimen/dimen_16dp"
        app:cardCornerRadius="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_12sp"
        android:layout_marginStart="@dimen/dimen_12sp"
        android:layout_marginEnd="@dimen/dimen_12sp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/dimen_20dp"
        app:cardBackgroundColor="@color/white"
        tools:ignore="MissingConstraints">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_recording_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_margin="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#8e8e93"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/transcript_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_will_appear_here_onces_recording_is_stoped"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="@dimen/dimen_12sp"
                android:fontFamily="sans-serif"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

